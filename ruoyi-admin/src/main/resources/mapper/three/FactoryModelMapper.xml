<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.three.mapper.FactoryModelMapper">

    <resultMap type="com.ruoyi.three.domain.FactoryModel" id="FactoryModelResult">
        <result property="id" column="id"/>
        <result property="factoryId" column="factory_id"/>
        <result property="name" column="name"/>
        <result property="modelUrl" column="model_url"/>
        <result property="modelFormat" column="model_format"/>
        <result property="status" column="status"/>
        <result property="defaultCamera" column="default_camera"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectFactoryModelVo">
        select id, factory_id, name, model_url, model_format, status, default_camera,
               create_by, create_time, update_by, update_time, remark
        from factory_model
    </sql>

    <select id="selectFactoryModelById" parameterType="Long" resultMap="FactoryModelResult">
        <include refid="selectFactoryModelVo"/>
        where id = #{id}
    </select>

    <select id="selectPublishedFactoryModelByFactoryId" parameterType="Long" resultMap="FactoryModelResult">
        <include refid="selectFactoryModelVo"/>
        where factory_id = #{factoryId}
          and status = 'published'
        order by id desc
        limit 1
    </select>

    <select id="selectFactoryModelByFactoryId" parameterType="Long" resultMap="FactoryModelResult">
        <include refid="selectFactoryModelVo"/>
        where factory_id = #{factoryId}
        order by id desc
    </select>

    <select id="selectFactoryModelList" parameterType="com.ruoyi.three.domain.FactoryModel" resultMap="FactoryModelResult">
        <include refid="selectFactoryModelVo"/>
        <where>
            <if test="factoryId != null">and factory_id = #{factoryId}</if>
            <if test="name != null and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="status != null and status != ''">and status = #{status}</if>
        </where>
        order by id desc
    </select>

    <insert id="insertFactoryModel" parameterType="com.ruoyi.three.domain.FactoryModel" useGeneratedKeys="true" keyProperty="id">
        insert into factory_model
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="factoryId != null">factory_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="modelUrl != null and modelUrl != ''">model_url,</if>
            <if test="modelFormat != null and modelFormat != ''">model_format,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="defaultCamera != null and defaultCamera != ''">default_camera,</if>
            <if test="remark != null and remark != ''">remark,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null and updateBy != ''">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="factoryId != null">#{factoryId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="modelUrl != null and modelUrl != ''">#{modelUrl},</if>
            <if test="modelFormat != null and modelFormat != ''">#{modelFormat},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="defaultCamera != null and defaultCamera != ''">#{defaultCamera},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateFactoryModel" parameterType="com.ruoyi.three.domain.FactoryModel">
        update factory_model
        <trim prefix="SET" suffixOverrides=",">
            <if test="factoryId != null">factory_id = #{factoryId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="modelUrl != null and modelUrl != ''">model_url = #{modelUrl},</if>
            <if test="modelFormat != null and modelFormat != ''">model_format = #{modelFormat},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="defaultCamera != null">default_camera = #{defaultCamera},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteFactoryModelById" parameterType="Long">
        delete from factory_model where id = #{id}
    </delete>

    <delete id="deleteFactoryModelByIds" parameterType="Long">
        delete from factory_model where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="updateFactoryModelStatusByFactoryId">
        update factory_model
        set status = #{status},
            update_time = now()
        where factory_id = #{factoryId}
          and id != #{excludeId}
          and status = 'published'
    </update>

    <update id="updateFactoryModelStatusById">
        update factory_model
        set status = #{status},
            update_time = now()
        where id = #{id}
    </update>

</mapper>


